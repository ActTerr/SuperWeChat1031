<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/title"/>
    <ScrollView

        android:id="@+id/personal_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:id="@+id/btn_avatar"
                android:layout_marginLeft="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_toLeftOf="@+id/enter_avatar"
                    android:id="@+id/userAvatar"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/a"
                    android:layout_marginBottom="10dp"
                    />


                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right"
                    android:id="@+id/enter_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btn_name"
                style="@style/list_txt_Style2"
                android:text="名字" />
           <TextView
               android:id="@+id/txt_name"
               style="@style/list_txt_Style3"
               android:text="aaaaa"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView

                style="@style/list_txt_Style2"
                android:text="微信号" />
                <TextView
                    android:id="@+id/txt_number"
                    style="@style/list_txt_Style3"
                    android:text="aaaa"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_qr"
                style="@style/list_txt_Style2"
                android:text="我的二维码" />
                <ImageView
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/qr"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_address"
                style="@style/list_txt_Style2"

                android:text="我的地址" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_sex"
                style="@style/list_txt_Style2"
                android:text="性别" />
             <TextView
                 style="@style/list_txt_Style3"
                 android:text="男"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/txt_location"
                style="@style/list_txt_Style2"
                android:text="地区" />
            <TextView
                style="@style/list_txt_Style3"
                android:text="beijing"/>
            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/list_txt_Style2"
                    android:text="个性签名"/>
                <TextView
                    style="@style/list_txt_Style3"
                    android:text="......"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/linkedln"
                    style="@style/list_txt_Style2"
                    android:text="Linkedln帐号"/>
                <TextView
                    style="@style/list_txt_Style3"
                    android:text="未设置"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>