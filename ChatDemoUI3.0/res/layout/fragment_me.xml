<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/personal_view"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/userAvatar"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/a"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/userAvatar"
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="aaaa"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/wechatNumber"
                    android:layout_below="@+id/username"
                    android:layout_toRightOf="@+id/userAvatar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信:"
                    android:textSize="20sp"/>
                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right"
                    android:id="@+id/enter_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/enter_qr"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/qr"
                    android:id="@+id/qrId"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
            <TextView
                android:id="@+id/txt_album"
                style="@style/list_txt_Style"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_photo"
                android:text="@string/str_me_album" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/txt_collect"
                style="@style/list_txt_Style"
                android:drawableLeft="@drawable/icon_me_collect"
                android:text="@string/str_me_collect" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/txt_package"
                style="@style/list_txt_Style"
                android:drawableLeft="@drawable/icon_me_money"
                android:text="@string/str_me_money" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/txt_card"
                style="@style/list_txt_Style"

                android:drawableLeft="@drawable/icon_me_card"
                android:text="@string/str_me_card" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txt_smail"
                style="@style/list_txt_Style"
                android:drawableLeft="@drawable/icon_me_smail"
                android:text="@string/str_me_smail" />


            <TextView
                android:id="@+id/txt_set"
                style="@style/list_txt_Style"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/icon_me_setting"
                android:text="@string/str_me_setting" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>